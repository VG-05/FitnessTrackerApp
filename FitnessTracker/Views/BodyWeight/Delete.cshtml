@model BodyWeight

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-primary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Body Weight</h2>
			</div>
		</div>
	</div>
	<div class="card-body">
		<form method="post" class="row">
			<input asp-for="Id" hidden />
			<input asp-for="UserID" hidden />
			<div class="form-floating py-2 col-2">
				<input asp-for="Weight" class="form-control border-0 shadow"  disabled/>
				<label asp-for="Weight" class="ms-2"></label>
			</div>
			<div class="form-floating py-2 col-2">
				<input asp-for="Unit" class="form-control border-0 shadow" disabled/>
				<label asp-for="Unit" class="ms-2"></label>
			</div>
			<div class="form-floating py-2 col-4">
				<input asp-for="Date" class="form-control border-0 shadow" disabled />
				<label asp-for="Date" class="ms-2"></label>
			</div>
			<div class="row pt-2">
				<div class="col-6 col-md-3">
					<button type="submit" class="btn btn-danger form-control">Delete</button>
				</div>
				<div class="col-6 col-md-3">
					<a asp-controller="BodyWeight" asp-action="Details" class="btn btn-outline-primary border form-control">
						Back To List
					</a>
				</div>
			</div>
		</form>
	</div>
</div>
