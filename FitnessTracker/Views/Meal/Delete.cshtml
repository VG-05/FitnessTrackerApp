@model MealVM

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-primary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Meal</h2>
			</div>
		</div>
	</div>
	<div class="card-body">
		<form method="post" class="row">
			<input asp-for="@Model.Meal.Api_Id" hidden />
			<input asp-for="@Model.Meal.ServingSizeAmount" hidden />
			<input asp-for="@Model.Meal.ServingSizeUnit" hidden />
			<div asp-validation-summary="ModelOnly"></div>
			<div class="row">
				<div class="form-floating py-2 col-8">
					<input asp-for="@Model.Meal.FoodName" class="form-control border-0 shadow" disabled />
					<label asp-for="@Model.Meal.FoodName" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-4">
					<input id="servings" asp-for="@Model.Meal.Servings" class="form-control border-0 shadow" disabled />
					@if (Model.Meal.ServingSizeAmount != null)
					{
						<label asp-for="@Model.Meal.Servings"> Servings (@Model.Meal.ServingSizeAmount @Model.Meal.ServingSizeUnit) </label>
					}
					else
					{
						<label asp-for="@Model.Meal.Servings"></label>
					}

					<span asp-validation-for="@Model.Meal.Servings" class="text-danger"></span>
				</div>
			</div>
			@if (Model.Meal.BrandName != null)
			{
				<div class="row">
					<div class="form-floating py-2 col-8">
						<input asp-for="@Model.Meal.BrandName" class="form-control border-0 shadow" disabled />
						<label asp-for="@Model.Meal.BrandName"></label>
					</div>
				</div>
			}
			<div class="row">
				<div class="form-floating py-2 col-2">
					<input type="date" asp-for="@Model.Meal.Date" class="form-control border-0 shadow" disabled />
					<label asp-for="@Model.Meal.Date" class="ms-2"></label>
					<span asp-validation-for="@Model.Meal.Date" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-3">
					<select asp-for="@Model.Meal.MealTime" asp-items="@Model.MealTimes" class="form-select border-0 shadow" disabled>
						<option selected disabled>--Select meal of the day--</option>
					</select>
					<label asp-for="@Model.Meal.MealTime" class="ms-2"></label>
					<span asp-validation-for="@Model.Meal.MealTime" class="text-danger"></span>
				</div>
				<div class="col-1">
				</div>
				<div class="col-4 align-self-end">
					<canvas id="nutritionchart"></canvas>
				</div>
			</div>

			<div class="form-floating py-2 col-4">
				<input id="calories" asp-for="@Model.Meal.Calories" class="form-control border-0 shadow" disabled />
				<label asp-for="@Model.Meal.Calories" class="ms-2"></label>
			</div>
			<div class="form-floating py-2 col-4">
				<input id="carbohydrates" asp-for="@Model.Meal.Carbohydrates" class="form-control border-0 shadow" disabled />
				<label asp-for="@Model.Meal.Carbohydrates" class="ms-2"></label>
			</div>
			<div class="form-floating py-2 col-4">
				<input id="protein" asp-for="@Model.Meal.Protein" class="form-control border-0 shadow" disabled />
				<label asp-for="@Model.Meal.Protein" class="ms-2"></label>
			</div>
			<div class="form-floating py-2 col-4">
				<input id="fat" asp-for="@Model.Meal.Fat" class="form-control border-0 shadow" disabled />
				<label asp-for="@Model.Meal.Fat" class="ms-2"></label>
			</div>
			<div class="row pt-2">
				<div class="col-6 col-md-3">
					<button type="submit" class="btn btn-primary form-control">Delete Meal</button>
				</div>
				<div class="col-6 col-md-3">
					<a asp-controller="Meal" asp-action="Index" class="btn btn-outline-primary border form-control">
						Back To Meals
					</a>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<script>
		let nutritionchart = new Chart("nutritionchart", {
			type: 'pie',
			data: {
				labels: [
					'Carbohydrates',
					'Fats',
					'Proteins'
				],
				datasets: [{
					label: 'Amount',
					data: [document.getElementById('carbohydrates').value, document.getElementById('fat').value, document.getElementById('protein').value],
					backgroundColor: [
						'rgb(255, 159, 64)',
						'rgb(255, 99, 132)',
						'rgb(54, 162, 235)'
					]
				}]
			}
		});
	</script>
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
